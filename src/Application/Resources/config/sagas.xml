<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Doctrine2 connection instance -->
        <service id="app.sagas.storage.connection" class="Doctrine\DBAL\Connection" public="false">
            <factory class="Desperado\Saga\Storage\Doctrine\DoctrineConnectionFactory" method="create"/>
            <argument>%database_connection_dsn%</argument>
            <argument type="constant">true</argument>
            <argument type="service" id="service_bus.logger"/>
        </service>

        <!-- Sagas storage -->
        <service id="sagas_storage" class="Desperado\Saga\Storage\Doctrine\DoctrineSagaStorage">
            <argument type="service" id="app.sagas.storage.connection"/>
        </service>
    </services>
</container>
