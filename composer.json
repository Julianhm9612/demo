{
  "name": "mmasiukevich/service-bus-demo",
  "description": "PHP Service Bus (publish-subscribe pattern) demo application",
  "type": "library",
  "license": "proprietary",
  "authors": [
    {
      "name": "Masiukevich Maksim",
      "email": "desperado@minsk-info.ru",
      "homepage": "https://github.com/mmasiukevich",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "ServiceBusDemo\\": "src/",
      "ServiceBusDemo\\App\\": "app/",
      "ServiceBusDemo\\Tools\\": "tools/"
    }
  },
  "require": {
    "php": ">=7.2",
    "mmasiukevich/service-bus": "^2"
  },
  "require-dev": {
    "doctrine/dbal": "^v2.6",
    "phpunit/phpunit": "^7.2",
    "vimeo/psalm": "^2"
  },
  "config": {
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "psalm": "./vendor/bin/psalm --config=./psalm.xml",
    "phpunit": "phpunit --configuration ./phpunit.xml --verbose",
    "coverage": "phpunit --configuration ./phpunit.xml --coverage-html ./coverage --verbose",
    "test": [
      "@phpunit"
    ]
  }
}
